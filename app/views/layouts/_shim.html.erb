<meta name="viewport" content="width=device-width,initial-scale=1">
<%= csrf_meta_tags %>
<%= csp_meta_tag %>
<%= stylesheet_link_tag "application", "bootstrap", media: "all", "data-turbolinks-track": "reload" %>
<%= javascript_pack_tag "application", "bootstrap", "bootstrap_bundle_min", "data-turbolinks-track": "reload" %>


<%= javascript_pack_tag "lib/main", "data-turbolinks-track": "reload" %>

<script>
  $(document).ready(function(){
    document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth'
      });
      calendar.render();
    });
  });
</script>
   